<%= render 'shared/navbar' %>
<div class='container'>
<div class='header-box'>
  <h1 class='title'>Foods</h1>
  <%= link_to 'New Food', new_food_path, class: 'actions' %>
</div>
<table class='table'>
  <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>Actions</th>
  </tr>

  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td>$ <%= food.price %></td>
      <td  class='delete' ><%= link_to "Delete", delete_food_path(food.id), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
  <% end %>
</table>
</div>
